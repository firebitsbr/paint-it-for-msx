# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
trim_trailing_whitespace = true

[*.{c,h,s}]
indent_size = 4
insert_final_newline = true

[Makefile]
indent_size = 4
indent_style = tab

[*.md]
max_line_length = off
trim_trailing_whitespace = false

